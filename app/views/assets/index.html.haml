#assets_list
  %table.table.table-hover
    %caption
      = t('asset.list.caption')
    %thead
      - ['Type', 'Asset ID', 'Serial No.', 'Company', 'Model', 'Warranty', 'Warranty Left (days)', 'Assignment', 'Action'].each do |heading|
        %th
          = heading
    %tbody
      - @assets.each do |asset|
        %tr{ id: asset.id, 'data-url' => asset_path(asset) }
          %td.type
            = asset.asset_type.name
          %td.asset_id
            = asset.asset_id
          %td.serial
            = asset.serial
          %td.company
            = asset.company.name
          %td.model
            = asset.model.name rescue '-'
          %td.warranty
            = asset.warranty.name
          %td.warranty_left
            = asset.warranty_left
          %td.assignment
            = asset.current_assignment.description
          %td.action
            = link_to 'Clone', clone_asset_path(id: asset.id), class: 'btn'
