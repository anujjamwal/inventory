- content_for :title, "New Asset"
= render :partial => "form"

#new_warranty.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3 New Warranty
  = form_for Warranty.new, html: {class: 'form-horizontal form'} do |t|
    .modal-body
      .control-group
        = t.label :company_id, 'Company'
        .controls
          = t.select :company_id, options_for_select([['Select', nil]] + Company.all.map{|c| [c.name, c.id]})
      .control-group
        = t.label :name, 'Warranty Name'
        .controls
          = t.text_field :name
      .control-group
        = t.label :duration_in_days, 'Duration(Days)'
        .controls
          = t.text_field :duration_in_days
      .control-group
        = t.label :description, 'Description'
        .controls
          = t.text_area :description
    .modal-footer
      %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
      = t.submit

